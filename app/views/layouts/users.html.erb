<!DOCTYPE html>
<html>
  <head>
    <title>MyGiftList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Bree+Serif|Cabin|Cambay|Noto+Serif|Open+Sans&display=swap'%>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="users">
  <div class="container">
    <div class="row">
      <ul class="nav">
      <% if logged_in? %>
      <span class="nav-link"><%= link_to "Logout", '/logout'%> | Logged in as: <%= current_user.username.capitalize %></span>
      <% end %>
      </ul>
    </div>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
