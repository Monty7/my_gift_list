<div class="col-md-12">
	<% if !flash[:success].blank? %>
		<div class="notice">
			<%= flash[:success] %>
		</div>
	<% end %>

	<h1>Sign Up</h1>

	<%= form_for(@user)  do |f| %>
		<%= f.label :username %>
		<%= f.text_field :username %>

		<%= f.label :email  %>
		<%= f.email_field :email %>

		<%=  f.label :password %>
		<%=  f.password_field :password %>

		<%=  f.submit %>
	<% end %>

	<% if @user.errors.any? %>
		<% @user.errors.full_messages.each do |error|%>
		<p><%= error %></p>

		<% end %>
	<% end %>
</div>